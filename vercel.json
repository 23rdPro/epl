{
  "version": 2,
  "builds": [
    {
      "src": "epl_api/asgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "scripts": {
    "build": "pip install -r requirements.txt && playwright install chromium"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "epl_api/asgi.py"
    }
  ]
}
